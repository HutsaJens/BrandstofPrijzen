            <include layout="@layout/shimmer_list_item" />
            <include layout="@layout/shimmer_list_item" />
            <include layout="@layout/shimmer_list_item" />
            <include layout="@layout/shimmer_list_item" />
            <include layout="@layout/shimmer_list_item" />
            <include layout="@layout/shimmer_list_item" />
            <include layout="@layout/shimmer_list_item" />
            <include layout="@layout/shimmer_list_item" />

        </LinearLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvBrandstof"
        android:visibility="gone"/>

</FrameLayout>